  "author": "Max Milton <max@wearegenki.com>",
  "license": "Apache",
  "main": "dist/db.js",
  "module": "dist/db.esm.js",
  "files": ["dist"],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "node test/test.js",
    "pretest": "npm run build"
  },
  "peerDependencies": {
    "vue": "^2.5.3",
    "vuex": "^3.0.1"
  },
